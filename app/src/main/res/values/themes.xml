<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Notes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/white</item>
         <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Base.Theme.Notes.Dialog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.Notes" parent="Base.Theme.Notes" >
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="card_item" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#171616</item>
        <item name="colorOutline">#000000</item> <!-- Black outline for light theme -->
        <item name="hintTextColor">#000000</item> <!-- Gray hint color -->

    </style>

    <style name="deleteButton">
        <item name="android:tint">#000000</item> <!-- Icon color -->
    </style>
    <style name="searchView">
        <item name="android:color">#ffffff</item> <!-- Icon color -->
        <item name="android:tint">#000000</item> <!-- Icon color -->
        <item name="queryBackground">@android:color/transparent</item> <!-- Removes underline -->
        <item name="submitBackground">@android:color/transparent</item> <!-- Removes submit background -->
    </style>

    <style name="button">
        <item name="android:background">@drawable/button_rounded_background</item>
        <item name="android:backgroundTint">#FA491C</item> <!-- Background tint for the button -->
        <item name="android:tint">#061D6B</item> <!-- Icon color -->
        <item name="android:textColor">#061D6B</item> <!-- Text color, if applicable -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="iconTint">#000000</item> <!-- Black for light theme -->
    </style>

    <style name="google_background">
        <item name="android:background">@drawable/rounded_button_google</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:tint">@color/black</item>
        <item name="android:backgroundTint">#D2256AEF</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

</resources>